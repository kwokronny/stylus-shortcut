for $s_prefix, $s_type in $yoz_status {
.{yoz_prefix}{$s_prefix}bg {
	for $name, $color in yoz_color {
		&-c_{$name}{$s_type} {
			background-color: $color;
		}
	}

	$background_mode = {
		cover: cover,
		contain: contain,
		fill: 100% 100%,
		fill_w: 100% auto,
		fill_h: auto 100%
	};

	for $name, $mode in $background_mode {
		&-m_{$name}{$s_type} {
			background-size: $mode;
			background-position: center;
		}
	}

	$background_repeat = {
		no: no-repeat,
		x: repeat-x,
		y: repeat-y,
		xy: repeat
	};

	for $name, $repeat in $background_repeat {
		&-r_{$name}{$s_type} {
			background-repeat: $repeat;
		}
	}
}
}